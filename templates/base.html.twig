    <script>
        $(document).ready(function() {
            // Initialize DataTables
            $('.datatable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/ru.json'
                },
                pageLength: 25,
                responsive: true
            });
            
            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap-5',
                placeholder: 'Выберите значение',
                allowClear: true
            });
            
            // Initialize datepickers
            $('.datepicker').flatpickr({
                dateFormat: "d.m.Y",
                locale: "ru",
                disableMobile: true
            });
            
            $('.datetimepicker').flatpickr({
                enableTime: true,
                dateFormat: "d.m.Y H:i",
                locale: "ru",
                time_24hr: true,
                disableMobile: true
            });
            
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
            
            // Update clock
            function updateClock() {
                const now = new Date();
                const timeString = now.toLocaleTimeString('ru-RU', { 
                    hour: '2-digit', 
                    minute: '2-digit'
                });
                $('#current-time').text(timeString);
            }
            
            setInterval(updateClock, 60000);
            updateClock();
            
            // Confirm before dangerous actions
            $(document).on('submit', 'form[data-confirm]', function(e) {
                if (!confirm($(this).data('confirm'))) {
                    e.preventDefault();
                }
            });
            
            // Tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Auto-focus first field in forms
            $('form:not(.no-autofocus)').find('input[type="text"]:visible, input[type="email"]:visible, textarea:visible').first().focus();
            
            // Character counters for textareas
            $('textarea[maxlength]').each(function() {
                const maxLength = $(this).attr('maxlength');
                const counterId = 'counter-' + $(this).attr('id');
                $(this).after('<small class="text-muted float-end"><span id="' + counterId + '">' + maxLength + '</span> осталось</small>');
                
                $(this).on('input', function() {
                    const remaining = maxLength - $(this).val().length;
                    $('#' + counterId).text(remaining);
                });
            });
            
            // Print functionality
            $('.print-btn').on('click', function() {
                window.print();
            });
            
            // Initialize calendar
            if ($('#calendar').length) {
                const calendarEl = document.getElementById('calendar');
                const calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    locale: 'ru',
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek,timeGridDay'
                    },
                    events: '/api/appointments/calendar',
                    eventClick: function(info) {
                        alert('Прием: ' + info.event.title);
                    }
                });
                calendar.render();
            }
            
            // Form validation
            $('form').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Обработка...');
            });
        });
        
        // Global functions
        function showLoading() {
            $('#loading').fadeIn();
        }
        
        function hideLoading() {
            $('#loading').fadeOut();
        }
        
        function formatPhone(phone) {
            return phone.replace(/(\d{1})(\d{3})(\d{3})(\d{2})(\d{2})/, '+$1 ($2) $3-$4-$5');
        }
        
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('ru-RU');
        }
    </script>
    
    <!-- Loading overlay -->
    <div id="loading" class="d-none" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255,255,255,0.8); z-index: 9999; display: flex; align-items: center; justify-content: center;">
        <div class="loader"></div>
    </div>
    
    {% block extra_javascripts %}{% endblock %}
</body>
